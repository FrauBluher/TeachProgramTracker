.ui.text.container
  .ui.middle.aligned.center.aligned.grid
    .column
      %h2.ui.image.header
        .content
          Forgot your password?
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:class => "form ui large form" }) do |f|
        = devise_error_messages!
        .ui.stacked.segment
          .field
            = f.email_field :email, autofocus: true, :placeholder => "E-mail address"
          .actions
            = f.submit "Send me reset password instructions", :class => "ui fluid large primary submit button" 
        = render "devise/shared/links"