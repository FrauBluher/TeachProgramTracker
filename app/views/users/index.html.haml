.ui.buttons
  %button.ui.labeled.icon.button
    %i.add.chevron.icon
    %a.item{:href => "/users/new"} Add User

.ui.list
  - @users.all.each do |user|
    .item
      %i.users.icon
      .content
        = user.name
        .ui.list
          .item
            %i.mail.icon
            .content
              = user.email
          .item
            %i.marker.icon
            .content
              put location
          .item
            %i.folder.icon
            .content
              - if user.trainer?
                = "Trainer"
              - else
                = "Normal User"
          .item
            %i.linkify.icon
            .content
              = link_to "View", "/users/#{user.id}", method: :get
              &emsp;
              = link_to "Edit", "/users/#{user.id}/edit", method: :get
              &emsp;
              = link_to "Destroy", "/users/#{user.id}", method: :delete, data: { confirm: "You sure?" }
