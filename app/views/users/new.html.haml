.ui.text.container
  = form_tag "/users/invite", method: "post", class: "ui form" do
    %div.field
      = label_tag :name, "Name:"
      = text_field_tag :name
    %div.field
      = label_tag :email, "Email:"
      = text_field_tag :email
    %div.field
      = label_tag :status, "Status:"
      = text_field_tag :status
    %div.field
      = label_tag :residency_location_id, "Location:"
      = select_tag :residency_location_id, options_from_collection_for_select(ResidencyLocation.all, :id, :name)
    = submit_tag "Invite", class: "ui primary button"
    %a{:href => "/users"}
      = button_tag "Cancel", :type => 'button', :class => "ui button"
