.ui.text.container
  = form_tag "/users/invite", method: "post", class: "ui form" do
    %div.field
      = label_tag :name, "Name:"
      = text_field_tag :name
    %div.field
      = label_tag :email, "Email:"
      = text_field_tag :email
    %div.field
      = label_tag :status, "Status:"
      = text_field_tag :status
    = submit_tag "Invite", class: "ui primary button"
    = link_to "Cancel", users_path
